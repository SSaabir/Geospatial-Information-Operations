# ==============================================
# Geospatial Information Operations - Environment Configuration Template
# ==============================================
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control!

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# Complete Database URL (will be constructed from above variables)
DATABASE_URL=postgresql+psycopg2://username:password@localhost:5432/database_name

# ==============================================
# API KEYS & EXTERNAL SERVICES
# ==============================================

# Groq API Configuration (for LangChain/LLM)
# Get your API key from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# SerpAPI Configuration (for web search and data collection)
# Get your API key from: https://serpapi.com/
SERPAPI_API_KEY=your_serpapi_api_key_here

# Weather API Configuration
# Get your API key from your weather data provider
WEATHER_API_KEY=your_weather_api_key_here

# Additional API Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ==============================================
# EARTH DATA / ENVIRONMENTAL APIs
# ==============================================
EARTH_DATA_USERNAME=your_earth_data_username
EARTH_DATA_PASSWORD=your_earth_data_password

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Security Configuration
SECRET_KEY=your_super_secret_key_change_this_in_production
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480
REFRESH_TOKEN_EXPIRE_DAYS=30

# ==============================================
# PAYMENT & BILLING CONFIGURATION
# ==============================================

# Stripe Configuration (for payment processing)
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Payment Configuration
PAYMENT_SKIP_LUHN=false
PAYMENT_EXPIRY_INTERVAL_SECONDS=86400

# ==============================================
# EMAIL & NOTIFICATIONS CONFIGURATION
# ==============================================

# SMTP Configuration (for email notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
DEFAULT_NOTIFICATION_EMAIL=alerts@yourdomain.com

# Webhook Notifications
GLOBAL_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ==============================================
# SERVER CONFIGURATION
# ==============================================

# FastAPI Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True
RELOAD=True

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ==============================================
# CACHE CONFIGURATION
# ==============================================
# Redis Configuration (if using Redis for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ==============================================
# AI/ML MODEL CONFIGURATION
# ==============================================

# Model Paths
CLIMATE_MODEL_PATH=climate_condition_model.pkl
LABEL_ENCODER_PATH=label_encoder.pkl
FEATURE_IMPUTER_PATH=feature_imputer.pkl

# Model Configuration
MODEL_CONFIDENCE_THRESHOLD=0.7
PREDICTION_BATCH_SIZE=100

# ==============================================
# DATA PROCESSING CONFIGURATION
# ==============================================

# File Upload Configuration
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=csv,json,xlsx

# Data Processing
MAX_PROCESSING_ROWS=10000
DATA_RETENTION_DAYS=365

# ==============================================
# MONITORING & ANALYTICS
# ==============================================

# Prometheus Configuration (if using)
PROMETHEUS_ENABLED=False
PROMETHEUS_PORT=8001

# Sentry Configuration (for error tracking)
SENTRY_DSN=your_sentry_dsn_here

# ==============================================
# BACKUP & RECOVERY
# ==============================================
BACKUP_ENABLED=True
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# ==============================================
# DEVELOPMENT TOOLS
# ==============================================
# Enable debug mode for development
FLASK_DEBUG=True
DJANGO_DEBUG=True

# Testing Configuration
TEST_DATABASE_URL=postgresql+psycopg2://username:password@localhost:5432/test_database